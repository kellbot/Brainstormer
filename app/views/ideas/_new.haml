- form_for(@idea) do |f|
  = @idea.errors.each{|e| e}
  %fieldset
    %legend
      New Idea
    %p
      = f.label :name
      = f.text_field :name
    %p
      = f.label :content, :Description
      = f.text_area :content
    %p
      = f.label :color
      = f.text_field :color
    %p
      = f.submit 'Create'
