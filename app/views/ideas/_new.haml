- form_for(@idea) do |f|
  = @idea.errors.each{|e| e}
  %fieldset
    %legend
      = @idea.new_record? ? 'New Idea' : 'Edit Idea'
    %p
      = f.label :name
      = f.text_field :name
    %p
      = f.label :content, :Description
      = f.text_area :content
    %p
      = f.label :color
      = f.text_field :color
    %p
      = f.submit (@idea.new_record? ? 'Create' : 'Save')
